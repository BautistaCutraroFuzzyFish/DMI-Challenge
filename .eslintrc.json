{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["standard"],
  "plugins": ["prettier", "jest"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
